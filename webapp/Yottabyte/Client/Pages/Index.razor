            <img draggable="false" class="absolute select-none ml-[7vw] top-[10%] z-1 w-[28%]" src="img/mockup.png" />
        </div>
    </div>
    <button class="flex justify-center self-end mb-5" onclick="document.getElementById('secondSection').scrollIntoView({behavior:'smooth'})">
        <div class="animate-bounce bg-white dark:bg-slate-800 p-2 w-12 h-10  flex items-center justify-center">
